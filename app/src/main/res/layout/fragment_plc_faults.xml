<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp">

    <include
        android:id="@+id/incHeader"
        layout="@layout/common_header" />

    <TextView
        android:id="@+id/tvGun1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/bg_black_rect_with_white_border"
        android:gravity="center_horizontal"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/lbl_gun_1"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toStartOf="@id/tvGun2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/incHeader" />

    <TextView
        android:id="@+id/tvGun2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/bg_black_rect_with_white_border"
        android:gravity="center_horizontal"
        android:padding="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_10sdp"
        android:text="@string/lbl_gun_2"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvGun1"
        app:layout_constraintTop_toBottomOf="@id/incHeader" />

    <ImageView
        android:id="@+id/ivGun1Fault"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        tools:src="@drawable/ic_green_dot"
        app:layout_constraintEnd_toEndOf="@id/tvGun1"
        app:layout_constraintStart_toStartOf="@id/tvGun1"
        app:layout_constraintTop_toBottomOf="@id/tvGun1" />

    <ImageView
        android:id="@+id/ivGun2Fault"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        tools:src="@drawable/ic_red_dot"
        app:layout_constraintEnd_toEndOf="@id/tvGun2"
        app:layout_constraintStart_toStartOf="@id/tvGun2"
        app:layout_constraintTop_toBottomOf="@id/tvGun2" />

</androidx.constraintlayout.widget.ConstraintLayout>