<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingHorizontal="@dimen/_5sdp"
        android:paddingVertical="@dimen/_3sdp">

        <LinearLayout
            android:id="@+id/lnrOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSettings"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:contentDescription="@string/lbl_settings"
                android:src="@drawable/ic_settings"
                app:tint="@color/white" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivChangeAppLanguage"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:contentDescription="@string/lbl_change_app_language"
                android:src="@drawable/ic_change_language"
                android:visibility="gone"
                app:tint="?attr/viewThemeColor" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivSwitchDarkMode"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:contentDescription="@string/lbl_fault_information"
                android:src="@drawable/ic_dark_mode"
                android:visibility="gone"
                app:tint="?attr/viewThemeColor" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivFaultInfo"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:contentDescription="@string/lbl_fault_information"
                android:src="@drawable/ic_fault_info"
                android:visibility="gone"
                app:tint="?attr/viewThemeColor" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivScreenInfo"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:contentDescription="@string/lbl_firmware_version_information"
                android:src="@drawable/ic_info"
                android:visibility="gone"
                app:tint="?attr/viewThemeColor" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivLocalStartStop"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:contentDescription="@string/lbl_firmware_version_information"
                android:src="@drawable/ic_local_start_stop_hand_white"
                android:visibility="gone"
                app:tint="?attr/viewThemeColor" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivTestMode"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:contentDescription="@string/lbl_firmware_version_information"
                android:src="@drawable/ic_test_mode"
                android:visibility="gone"
                app:tint="?attr/viewThemeColor" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivNotifications"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:contentDescription="@string/lbl_notifications"
                android:src="@drawable/ic_notifications"
                android:visibility="gone"
                app:tint="?attr/viewThemeColor" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:clickable="true"
            android:contentDescription="@string/cd_back"
            android:focusable="true"
            android:src="@drawable/ic_back_arrow"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgHome"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:clickable="true"
            android:contentDescription="@string/cd_back"
            android:focusable="true"
            android:src="@drawable/ic_home"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imgBack"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <LinearLayout
            android:id="@+id/lnrNetworkStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvDateTime"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgServerStatus"
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_11sdp"
                android:contentDescription="@string/cd_server_icon"
                android:src="@drawable/ic_server_with_gsm" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgEthernetStatus"
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:contentDescription="@string/cd_ethernet_icon"
                android:src="@drawable/ic_ethernet_connected" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgGSMLevel"
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:contentDescription="@string/cd_gsm_icon"
                android:src="@drawable/ic_gsm_level_2" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgWifiLevel"
                android:layout_width="@dimen/_11sdp"
                android:layout_height="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:contentDescription="@string/cd_wifi_icon"
                android:src="@drawable/ic_wifi_level_2" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/_3sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_8ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="21/12/2023 Thu 16:56:23" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_gravity="center"
        android:background="@drawable/bg_white_bottom_rounded_rect"
        android:contentDescription="@string/cd_servotech_logo"
        android:gravity="center"
        android:padding="@dimen/_7sdp"
        android:src="@drawable/ic_statiq_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</FrameLayout>
