<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:context=".views.fragment.GunsMoreInformationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <include
                android:id="@+id/incHeaderGun1"
                layout="@layout/common_header" />

            <include
                android:id="@+id/incInitialSoc"
                layout="@layout/common_label_and_value_dual_socket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp" />

            <include
                android:id="@+id/incChargingSoc"
                layout="@layout/common_label_and_value_dual_socket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp" />

            <include
                android:id="@+id/incDemandVoltage"
                layout="@layout/common_label_and_value_dual_socket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp" />

            <include
                android:id="@+id/incDemandCurrent"
                layout="@layout/common_label_and_value_dual_socket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp" />

            <include
                android:id="@+id/incChargingVoltage"
                layout="@layout/common_label_and_value_dual_socket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp" />

            <include
                android:id="@+id/incChargingCurrent"
                layout="@layout/common_label_and_value_dual_socket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp" />

            <include
                android:id="@+id/incDuration"
                layout="@layout/common_label_and_value_dual_socket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp" />

            <include
                android:id="@+id/incEnergyConsumption"
                layout="@layout/common_label_and_value_dual_socket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_weight="1"
            android:orientation="vertical">

            <include
                android:id="@+id/incHeaderGun2"
                layout="@layout/common_header" />

            <include
                android:id="@+id/incInitialSoc2"
                layout="@layout/common_label_and_value_dual_socket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp" />

            <include
                android:id="@+id/incChargingSoc2"
                layout="@layout/common_label_and_value_dual_socket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp" />

            <include
                android:id="@+id/incDemandVoltage2"
                layout="@layout/common_label_and_value_dual_socket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp" />

            <include
                android:id="@+id/incDemandCurrent2"
                layout="@layout/common_label_and_value_dual_socket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp" />

            <include
                android:id="@+id/incChargingVoltage2"
                layout="@layout/common_label_and_value_dual_socket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp" />

            <include
                android:id="@+id/incChargingCurrent2"
                layout="@layout/common_label_and_value_dual_socket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp" />

            <include
                android:id="@+id/incDuration2"
                layout="@layout/common_label_and_value_dual_socket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp" />

            <include
                android:id="@+id/incEnergyConsumption2"
                layout="@layout/common_label_and_value_dual_socket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnACMeterInfo"
            style="@style/CommonButtonTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/lbl_ac_meter_information" />

        <Button
            android:id="@+id/btnDCMeterInfo"
            style="@style/CommonButtonTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:text="@string/lbl_dc_meter_information" />

        <Button
            android:id="@+id/btnChargingSummary"
            style="@style/CommonButtonTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:text="@string/lbl_charging_summary" />

        <Button
            android:id="@+id/btnFaultIndication"
            style="@style/CommonButtonTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:text="@string/lbl_fault_indication" />

        <Button
            android:id="@+id/btnChargingHistory"
            style="@style/CommonButtonTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_weight="1"
            android:text="@string/lbl_charging_history" />

    </LinearLayout>

</LinearLayout>